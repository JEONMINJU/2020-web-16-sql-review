extends ../layout/default.pug

block content
	.wrapper
		h2.title 도서등록
		.wr-wrapper.border.rounded.p-4
			form(action="/book/save" method="post" onsubmit="return onSave(this);")
				table.table
					tbody
						tr
							td.form-inline 책제목 / 저자
						tr
							td.form-inline
								input.col-sm-3.mb-2.form-control(type="text" name="name" placeholder="책제목")
								span.mx-2
								input.col-sm-3.mb-2.form-control(type="text" name="writer" placeholder="저자")
						tr
							td
								textarea.form-control(type="summary" placeholder="추가설명")
				.text-center
					button.btn.btn-dark 도서등록
					button.btn.btn-secondary(type="reset") 다시작성